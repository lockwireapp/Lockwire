{
    "extends": "plasmo/templates/tsconfig.base",
    "exclude": ["node_modules"],
    "include": [".plasmo/index.d.ts", "./**/*.ts", "./**/*.tsx"],
    "compilerOptions": {
        "strict": true,
        "paths": {
            "~*": ["./*"]
        },
        "skipLibCheck": true,
        "strictNullChecks": true,
        "experimentalDecorators": true,
        "noImplicitAny": true,
        "noImplicitReturns": true,
        "baseUrl": "./",
        "jsx": "react-jsx"
    }
}
