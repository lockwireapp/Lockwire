{
    "version": "0.0.1",
    "name": "@lckw/backend",
    "main": "lib/src/index.js",
    "scripts": {
        "lint": "prettier --write \"**/*.+(json|yml|css|md|gql)\" ./src && eslint --fix --ext .js,.jsx,.ts,.tsx ./src",
        "lint:ci": "prettier -c \"**/*.+(json|yml|css|md|gql)\" ./src && eslint --ext .js,.jsx,.ts,.tsx ./src",
        "generate:swagger": "npx tsoa spec-and-routes",
        "generate:types": "npx openapi-typescript ./openapi/swagger.json --output ./openapi/index.ts",
        "generate:openapi": "npm run generate:swagger && npm run generate:types",
        "generate:openapi:watch": "nodemon -x npm run generate:openapi",
        "build": "npm run generate:openapi && tsc",
        "build:watch": "tsc --watch",
        "emulators:db:kill": "kill $(lsof -t -i:9000)",
        "emulators": "firebase emulators:start --import=./emulator-data --export-on-exit",
        "watchers": "npm run generate:openapi:watch & npm run build:watch",
        "dev": "npm run watchers & npm run emulators",
        "shell": "npm run build && firebase functions:shell",
        "deploy": "firebase deploy --only functions"
    },
    "dependencies": {
        "uuid": "9.0.1",
        "express": "4.18.2",
        "firebase": "10.7.1",
        "firebase-admin": "12.0.0",
        "firebase-functions": "4.6.0",
        "firebase-tools": "13.0.3",
        "lodash": "4.17.21",
        "tsoa": "5.1.1",
        "@tsoa/runtime": "5.0.0",
        "openapi-typescript": "6.7.3"
    },
    "devDependencies": {
        "@types/lodash": "4.14.202",
        "@types/uuid": "9.0.7",
        "@types/express": "4.17.21",
        "@typescript-eslint/eslint-plugin": "6.19.0",
        "@typescript-eslint/parser": "6.19.0",
        "@types/validator": "13.11.8",
        "eslint": "8.56.0",
        "eslint-config-prettier": "9.1.0",
        "eslint-plugin-prettier": "5.1.3",
        "eslint-plugin-react": "7.33.2",
        "eslint-plugin-react-hooks": "4.6.0",
        "firebase-functions-test": "3.1.0",
        "typescript": "5.3.3",
        "prettier": "3.2.4",
        "ts-node": "10.9.2",
        "nodemon": "3.0.3"
    },
    "private": true
}
