{
  "exclude": [
    "dist",
    "**/node_modules"
  ],
  "include": ["./**/*.ts"],
  "compilerOptions": {
    "target": "ES2018",
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "strict": true,
    "outDir": "./dist",
    "declaration": true,
    "strictNullChecks": true,
    "experimentalDecorators": true,
    "noImplicitAny": true,
    "noImplicitReturns": true,
    "esModuleInterop": true,
    "sourceMap": true,
    "baseUrl": "./",
    "lib": ["ES2019", "DOM"]
  }
}
