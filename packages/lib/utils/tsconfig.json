{
  "exclude": [
    "dist",
    "**/node_modules"
  ],
  "include": ["./**/*.ts"],
  "compilerOptions": {
    "strict": true,
    "target": "ES2015",
    "useDefineForClassFields": true,
    "lib": ["ES2015", "DOM", "DOM.Iterable"],
    "module": "ESNext",
    "skipLibCheck": true,
    "moduleResolution": "bundler",
    "outDir": "./dist",
    "declaration": true,
    "strictNullChecks": true,
    "experimentalDecorators": true,
    "noImplicitAny": true,
    "noImplicitReturns": true,
    "esModuleInterop": true,
    "sourceMap": true,
    "baseUrl": "./",
  }
}
