{
  "exclude": [
    "dist",
    "**/node_modules"
  ],
  "include": ["./**/*.ts"],
  "compilerOptions": {
    "strict": true,
    "outDir": "./dist",
    "declaration": true,
    "strictNullChecks": true,
    "experimentalDecorators": true,
    "noImplicitAny": true,
    "noImplicitReturns": true,
    "esModuleInterop": true,
    "sourceMap": true,
    "baseUrl": "./",
    "lib": ["ES2015", "DOM"]
  },

}
